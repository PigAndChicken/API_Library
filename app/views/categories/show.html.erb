<html>
  <header>
    <h1 align="center"><%= "Category:" + @category.name %></h1>
  </header>
  <body>
    <div align="center">
      <%= will_paginate @category_articles %>
    </div>
    <% if login? and current_user.admin? %>
    <div class="row center">
      <span class="badge"><%= link_to 'edit', edit_category_path(@category) %></span>
    </div>
    <% end %>
    <%= render 'articles/call_article', obj: @category_articles %>
    <div align="center">
      <%= will_paginate @category_articles %>
    </div>
  </body>
</html>