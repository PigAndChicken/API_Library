<html>
  <header>
    <h1 align="center"> All Alpha Blogger </h1>
  </header>
  <body>
    <div align="center"> <%= will_paginate %></div>
    <div align="center">
      <% @users.each do |user| %>
      <ul class="listing">
        <div class="row">
          <div class="well col-md-4 col-md-offset-4">
            <ii><%= link_to gravatar_for(user), user_path(user) %></li>
            <li class="article_title"><%= link_to user.username, user_path(user) %></li>
            <li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
            <% if login? and current_user.admin? %>
              <li><%= link_to "delete", user_path(user), method: :delete, data: {confirm:"Are you sure?"} %></li>
            <% end %>
          </div>
        </div>
      </ul>
      <% end %>
    </div>
    <div align="center"> <%= will_paginate %></div>
  </body>
</html>